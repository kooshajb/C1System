@model IEnumerable<GetConsultingDto>

<div class="card text-left">

    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="card-title mb-3">مدیریت مشاوره ها</h4>
        </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">نام کامل</th>
                    <th scope="col">شماره موبایل</th>
                    <th scope="col">عملیات</th>
                </tr>
                </thead>
                <tbody>
                
                @if (TempData["ResultDelete"] != null)
                    {
                        @if (TempData["ResultDelete"].ToString() == "true")
                        {
                            <div class="alert alert-success alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                با موفقیت حذف شد
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                خطا در انجام عملیات حذف.
                            </div> 
                        }
                }

                @if (TempData["NotFoundConsulting"] != null)
                {
                    <script>
                    setTimeout(function () {
                        Swal.fire({
                            position: 'top-end',
                            icon: 'error',
                            title: 'فرمی با این مشخصات یافت نشد .',
                            showConfirmButton: false,
                            timer: 3000
                        })
                    }, 50)
                </script>
                }
            

                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">1</th>
                            <td>@item.FullName</td>
                            <td>@item.MobileNumber</td>
                            <td>
                                <a asp-action="DeleteConsulting" asp-controller="AdminConsulting" asp-area="Admin" asp-route-id="@item.ConsultingId" class="text-danger mr-2">
                                    <i class="nav-icon i-Close-Window font-weight-bold"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr class="gradeX odd" role="row">
                        <td colspan="5" class="sorting_1">فرمی موجود نمی باشد.</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/admin/assets/js/sweetalert.script.js"></script>
}