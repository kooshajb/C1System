@model GetConsultingDto

@{
    ViewData["Title"] = "حذف درخواست مشاوره";
}

<div class="col-md-12">
    <div class="card mb-4">
        <div class="card-body">
            <div class="card-title mb-3">حذف درخواست مشاوره</div>
            <form asp-action="DeleteConsultingById" method="post">
                <div class="row">
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="FullName">نام کامل</label>
                        <input readonly="readonly" asp-for="FullName" class="form-control">
                        <span class="text-danger" asp-validation-for="FullName"></span>
                    </div>
                                   
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="MobileNumber">شماره موبایل</label>
                        <input readonly="readonly" asp-for="MobileNumber" class="form-control">
                        <span class="text-danger" asp-validation-for="MobileNumber"></span>
                    </div>

                    <div class="col-md-12">
                        <button asp-action="DeleteConsultingById" asp-controller="AdminConsulting" asp-route-id="@Model.ConsultingId" class="btn btn-primary" type="submit">تایید</button>
                        <a asp-action="Index" class="btn btn-danger m-1">لغو</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>