@model GetTechnologyDto

@{
    ViewData["Title"] = "بروزرسانی تکنولوژی";
    List<UpdateTechMediaViewModel> techsMediaforupdate = ViewBag.MediaImage;
}

<div class="col-md-12">
    <div class="card mb-4">
        <div class="card-body">
            <div class="card-title mb-3">بروز رسانی تکنولوژی</div>
            <form asp-action="UpdateTechnology" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="TechnologyId"/>
                <div class="row">
                       <div class="col-md-6 form-group mb-3">
                          <label asp-for="Title">عنوان تکنولوژی</label>
                          <input asp-for="Title" class="form-control" placeholder="عنوان تکنولوژی را وارد کنید">
                          <span class="text-danger" asp-validation-for="Title"></span>
                      </div>

                    <div class="col-md-6 form-group mb-3">
                        <label>تصویر تکنولوژی</label>
                        <input name="iconTechFile" type="file" class="form-control">
                                                           
                        @if (techsMediaforupdate != null)
                        {
                            <div class="d-flex justify-content-center align-items-center mt-5">
                                @foreach (var mediaItem in techsMediaforupdate)
                                {
                                    <div class="position-relative" id="@mediaItem.MediaId">
                                        <img href="~/Medias/@mediaItem.FileName" target="_blank" class="w-20 rounded-2" src="~/Medias/@mediaItem.FileName" alt=""  />
                                        <a class="position-absolute top-0 left-0 bg-white text-black rounded-circle p-1 pe-auto" asp-action="DeleteTechnologyMediaById" asp-controller="AdminTechnology" asp-route-id="@mediaItem.MediaId" asp-route-technologyId="@Model.TechnologyId"><i class="i-Close-Window"></i></a>
                                    </div>
                                }
                            </div>
                        }
                    </div>

                    <div class="col-md-12">
                           <button asp-action="UpdateTechnology" asp-controller="AdminTechnology" class="btn btn-primary" type="submit">تایید</button>
                           <a asp-action="Index" class="btn btn-danger m-1">لغو</a>
                       </div>
                </div>
            </form>
        </div>
    </div>
</div>
