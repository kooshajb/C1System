@model GetTechnologyDto

@{
    ViewData["Title"] = "حذف تکنولوژی";
    List<UpdateTechMediaViewModel> techsMediaforupdate = ViewBag.MediaImage;
}

<div class="col-md-12">
    <div class="card mb-4">
        <div class="card-body">
            <div class="card-title mb-3">حذف تکنولوژی</div>
            <form asp-action="DeleteTechnologyById" method="post" enctype="multipart/form-data">
               <div class="row">
                   <div class="col-md-6 form-group mb-3">
                       <label asp-for="Title">عنوان تکنولوژی</label>
                       <input readonly="readonly" asp-for="Title" class="form-control" placeholder="عنوان تکنولوژی را وارد کنید">
                       <span class="text-danger" asp-validation-for="Title"></span>
                   </div>

                 <div class="col-md-6 form-group mb-3">
                    <label>تصویر تکنولوژی</label>
                     @if (techsMediaforupdate != null)
                    {
                        <div class="d-flex justify-content-center align-items-center mt-5">
                            @foreach (var mediaItem in techsMediaforupdate)
                            {
                                <div class="position-relative" id="@mediaItem.MediaId">
                                    <img href="~/Medias/@mediaItem.FileName" target="_blank" class="w-20 rounded-2" src="~/Medias/@mediaItem.FileName" alt=""  />
                                </div>
                            }
                        </div>
                    }
                </div>
                   
                   <div class="col-md-12">
                       <button asp-action="DeleteTechnologyById" asp-controller="AdminTechnology" asp-route-technologyId="@Model.TechnologyId" class="btn btn-primary" type="submit">تایید</button>
                       <a asp-action="Index" class="btn btn-danger m-1">لغو</a>
                   </div>
               </div>
            </form>
        </div>
    </div>
</div>
