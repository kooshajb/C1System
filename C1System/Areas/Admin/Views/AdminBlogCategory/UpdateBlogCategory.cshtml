@model GetBlogCategoryDto

@{
    ViewData["Title"] = "بروزرسانی دسته بندی وبلاگ";
}

<div class="col-md-12">
    <div class="card mb-4">
        <div class="card-body">
            <div class="card-title mb-3">بروز رسانی دسته بندی وبلاگ</div>
            <form asp-action="UpdateBlogCategory" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="BlogCategoryId"/>
                <div class="row">
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="Title">عنوان</label>
                        <input asp-for="Title" class="form-control" placeholder="عنوان را وارد کنید">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>

                    <div class="col-md-12">
                        <button asp-action="UpdateBlogCategory" asp-controller="AdminBlogCategory" class="btn btn-primary" type="submit">تایید</button>
                        <a asp-action="Index" class="btn btn-danger m-1">لغو</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>