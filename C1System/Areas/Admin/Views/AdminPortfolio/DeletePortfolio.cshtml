@model GetPortfolioDto

@{
    ViewData["Title"] = "حذف نمونه کار";
}

<div class="col-md-12">
    <div class="card mb-4">
        <div class="card-body">
            <div class="card-title mb-3">حذف خدمت</div>
            <form asp-action="DeletePortfolioById" method="post" enctype="multipart/form-data">
                 <div class="row">
                   <div class="col-md-6 form-group mb-3">
                       <label asp-for="Title">عنوان</label>
                       <input readonly="readonly" asp-for="Title" class="form-control" placeholder="عنوان را وارد کنید">
                       <span class="text-danger" asp-validation-for="Title"></span>
                   </div>

                   <div class="col-md-6 form-group mb-3">
                       <label asp-for="SubTitle">زیرعنوان</label>
                       <input readonly="readonly" asp-for="SubTitle" class="form-control" placeholder="زیرعنوان را وارد کنید">
                       <span class="text-danger" asp-validation-for="SubTitle"></span>
                   </div>

                   <div class="col-md-6 form-group mb-3">
                       <label asp-for="Description">توضیحات</label>
                       <input readonly="readonly" asp-for="Description" class="form-control" placeholder="توضیحات را وارد کنید">
                       <span class="text-danger" asp-validation-for="Description"></span>
                   </div>

                   <div class="col-md-6 form-group mb-3">
                       <label asp-for="SiteAddress">ادرس سایت</label>
                       <input readonly="readonly" asp-for="SiteAddress" class="form-control" placeholder="آدرس سایت را وارد کنید">
                       <span class="text-danger" asp-validation-for="SiteAddress"></span>
                   </div>

                   <div class="col-md-6 form-group mb-3">
                       <label asp-for="CompanyName">نام شرکت</label>
                       <input readonly="readonly" asp-for="CompanyName" class="form-control" placeholder="نام شرکت را وارد کنید">
                       <span class="text-danger" asp-validation-for="CompanyName"></span>
                   </div>

                   @* <div class="col-md-6 form-group mb-3"> *@
                   @*     <label asp-for="CompanyLogo">تصویر لوگو شرکت</label> *@
                   @*     <input readonly="readonly" asp-for="CompanyLogo" class="form-control" placeholder="تصویر لوگو شرکت را وارد کنید"> *@
                   @*     <span class="text-danger" asp-validation-for="CompanyLogo"></span> *@
                   @* </div> *@

                   @* <div class="col-md-6 form-group mb-3"> *@
                   @*     <label asp-for="FeatureMedia">تصویر شاخص</label> *@
                   @*     <input readonly="readonly" asp-for="FeatureMedia" class="form-control" placeholder="تصویر شاخص را وارد کنید"> *@
                   @*     <span class="text-danger" asp-validation-for="FeatureMedia"></span> *@
                   @* </div> *@

                   <div class="col-md-6 form-group mb-3">
                       <label>تصاویر</label>
                       <input readonly="readonly" class="form-control" placeholder="تصاویر را وارد کنید">
                   </div>

                    <div class="col-md-12">
                         <button asp-action="DeletePortfolioById" asp-controller="AdminPortfolio" asp-route-id="@Model.PortfolioId" class="btn btn-primary" type="submit">تایید</button>
                         <a asp-action="Index" class="btn btn-danger m-1">لغو</a>
                    </div>
               </div>
            </form>
        </div>
    </div>
</div>
