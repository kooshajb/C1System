@model GetNewsLetterDto

@{
    ViewData["Title"] = "حذف فرد از خبرنامه";
}

<div class="col-md-12">
    <div class="card mb-4">
        <div class="card-body">
            <div class="card-title mb-3">حذف فرد از خبرنامه</div>
            <form asp-action="DeleteNewsLetterById" method="post" enctype="multipart/form-data">
                <div class="row">
                   <div class="col-md-6 form-group mb-3">
                        <label asp-for="FullName">نام کامل</label>
                         <input readonly="readonly" asp-for="FullName" class="form-control">
                         <span class="text-danger" asp-validation-for="FullName"></span>
                     </div>
                                     
                     <div class="col-md-6 form-group mb-3">
                         <label asp-for="Email">ایمیل</label>
                         <input readonly="readonly" asp-for="Email" class="form-control">
                         <span class="text-danger" asp-validation-for="Email"></span>
                     </div>

                    <div class="col-md-12">
                        <button asp-action="DeleteNewsLetterById" asp-controller="AdminNewsLetter" asp-route-id="@Model.NewsLetterId" class="btn btn-primary" type="submit">تایید</button>
                        <a asp-action="Index" class="btn btn-danger m-1">لغو</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>