@model AddProjectDto

@{
    ViewData["Title"] = "افزودن پروژه";
}

<div class="col-md-12">
    <div class="card mb-4">
        <div class="card-body">
            <div class="card-title mb-3">افزودن پروژه</div>
            <form asp-action="AddProject" method="post">
                <div class="row">
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="Picture">تصویر پروژه</label>
                        <input asp-for="Picture" class="form-control" placeholder="تصویر پروژه را وارد کنید">
                        <span class="text-danger" asp-validation-for="Picture"></span>
                    </div>

                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="Title">عنوان</label>
                        <input asp-for="Title" class="form-control" placeholder="عنوان پروژه را وارد کنید">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="SubTitle">زیرعنوان</label>
                        <input asp-for="SubTitle" class="form-control" placeholder="زیرعنوان پروژه را وارد کنید">
                        <span class="text-danger" asp-validation-for="SubTitle"></span>
                    </div>

                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="Description">توضیحات</label>
                        <input asp-for="Description" class="form-control" placeholder="توضیحات پروژه را وارد کنید">
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    
                    @* media *@
                    
                    <div class="col-md-12">
                        <button asp-action="AddProject" asp-controller="AdminProject" class="btn btn-primary" type="submit">تایید</button>
                        <a asp-action="Index" class="btn btn-danger m-1">لغو</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
